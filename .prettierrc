{
	"tabWidth": 4,
	"useTabs": true,
	"printWidth": 120,
	"semi": false,
	"singleQuote": true,
	"trailingComma": "all",
	"bracketSameLine": true,
	"arrowParens": "avoid",

	"plugins": ["prettier-plugin-svelte"],
	"pluginSearchDirs": ["."],
	"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
